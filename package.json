{
  "name": "mss-platform",
  "version": "1.0.0",
  "description": "Cybersecurity Managed Security Services Platform",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:api\" \"docker-compose up postgres redis\"",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:technician": "npm run dev --workspace=apps/technician-app",
    "dev:logs": "./scripts/logs.sh",
    "dev:stop": "./scripts/stop.sh",
    "dev:clean": "./scripts/clean.sh",
    "dev:rebuild": "./scripts/rebuild.sh",
    "setup": "./scripts/setup.sh",
    "install:all": "npm install",
    "build": "npm run build --workspaces --if-present",
    "build:apps": "npm run build --workspace=apps/*",
    "build:packages": "npm run build --workspace=packages/*",
    "test": "npm run test --workspaces --if-present",
    "test:apps": "npm run test --workspace=apps/*",
    "test:packages": "npm run test --workspace=packages/*",
    "test:integration": "npm run test:integration --workspace=apps/api --if-present",
    "test:e2e": "npm run test:e2e --workspace=apps/frontend --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "security:audit": "npm audit --audit-level high",
    "security:scan": "npm run security:scan --workspaces --if-present",
    "migrate": "npm run migrate --workspace=apps/api",
    "migrate:rollback": "npm run migrate:rollback --workspace=apps/api",
    "seed": "npm run seed --workspace=apps/api",
    "db:reset": "npm run db:reset --workspace=apps/api",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v --remove-orphans && docker system prune -f",
    "docker:rebuild": "docker-compose build --no-cache",
    "precommit": "lint-staged",
    "release": "npm run build && npm run test && npm run lint",
    "clean": "npm run clean --workspaces --if-present"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^3.0.1",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "rimraf": "^5.0.7",
    "cross-env": "^7.0.3"
  },
  "keywords": [
    "cybersecurity",
    "mss",
    "managed-security-services",
    "docker",
    "nextjs",
    "express",
    "postgresql",
    "redis"
  ],
  "author": "MSS Platform Team",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/mss-platform.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/mss-platform/issues"
  },
  "homepage": "https://github.com/your-org/mss-platform#readme"
}